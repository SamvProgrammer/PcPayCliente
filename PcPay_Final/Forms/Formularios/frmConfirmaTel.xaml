<Window x:Class="PcPay.Forms.formularios.frmConfirmaTel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmacion de Número" Height="132" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Confirmar el Teléfono del Cliente" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="219" Height="32"/>
        <TextBox x:Name="txtTel"  HorizontalAlignment="Left" Height="36" Margin="10,31,0,0" TextWrapping="Wrap" Text="" MaxLength="10" PreviewTextInput="soloNumero" VerticalAlignment="Top" Width="219"/>
        <Button Click="aceptar" Content="OK" HorizontalAlignment="Left" Margin="280,13,0,0" VerticalAlignment="Top" Width="69" Height="28"/>
        <Button Click="cancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="280,49,0,0" VerticalAlignment="Top" Width="69" Height="29"/>

    </Grid>
</Window>
